<!--index.wxml-->
<view class="container" style="background-image: url('../../assets/img/bg.jpg')">
  <view class="title">
    {{movie.title}}
  </view>
  <view class="title">
    <button wx:if="{{!movie.image}}" type="primary" bindtap="getPhoto">Choose Image</button>
    <image wx:else src="{{movie.image}}" mode="aspectFit" bindtap="previewImage">
    </image>
  </view>
  <view class="title">
    <button wx:if="{{!movie.latitude}}" type="primary" bindtap="getLocation">Add Location</button>
    <map wx:else style="width: 500rpx; height: 500rpx;" latitude="{{movie.latitude}}" longitude="{{movie.longitude}}" markers="{{markers}}" bindmarkertap="tapMarker" bindtap="tapMap"></map>
    <button open-type="share" type="warn">Share!</button>
  </view>
